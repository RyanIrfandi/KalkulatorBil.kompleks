<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/relatif"
    android:onClick="onClickTombolgHItung">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="5"
        android:id="@+id/real1"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="5"
        android:id="@+id/imajiner1"
        android:layout_above="@+id/real2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="5"
        android:id="@+id/real2"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/real1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="5"
        android:id="@+id/imajiner2"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignTop="@+id/real2"
        android:layout_alignLeft="@+id/imajiner1"
        android:layout_alignStart="@+id/imajiner1"
        android:layout_alignBottom="@+id/real2"
        android:layout_alignRight="@+id/imajiner1"
        android:layout_alignEnd="@+id/imajiner1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tambah"
        android:id="@+id/textView"
        android:layout_above="@+id/imajiner2"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hasil"
        android:id="@+id/button"
        android:onClick="onClickTombolgHItung"
        android:layout_below="@+id/imajiner2"
        android:layout_toLeftOf="@+id/imajiner2"
        android:layout_toStartOf="@+id/imajiner2"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblhasil"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button"
        android:layout_toLeftOf="@+id/imajiner2"
        android:layout_toRightOf="@+id/real2"
        android:layout_toEndOf="@+id/real2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Bil.Real"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Bil.Imajiner"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imajiner1"
        android:layout_alignStart="@+id/imajiner1"
        android:layout_alignRight="@+id/imajiner1"
        android:layout_alignEnd="@+id/imajiner1" />

</RelativeLayout>
